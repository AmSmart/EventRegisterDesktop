<Page x:Class="EventRegisterDesktop.Pages.AddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EventRegisterDesktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="405" d:DesignWidth="287"
      Title="AddPage">

    <Grid Margin="5 5" Background="BurlyWood">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="MyPanel">

            </StackPanel>
        </ScrollViewer>

        <StackPanel Margin="3 3" Orientation="Horizontal" Grid.Row="1">
            <Button Name="BtnSave" Click="BtnSave_Click" Margin="85 0 30 0" Padding="5 5" Content="Save"/>
            <Button Padding="5 5" Name="ResetBtn" Click="ResetBtn_Click" Content="Reset"/>
        </StackPanel>

    </Grid>
</Page>
